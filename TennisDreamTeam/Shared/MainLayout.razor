@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Secondary" Elevation="0">
        <MudIconButton OnClick="this.DrawerToggle" Icon="@Icons.Filled.SportsTennis" Color="Color.Inherit" />
        <MudText Typo="Typo.h6">Tennis</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Filled.Search" OnClick="this.NavigateToSearch" Color="Color.Inherit" />
        <MudMenu>
            <ActivatorContent>
                <MudIconButton Icon="@Icons.Filled.Settings" Color="Color.Inherit" />
            </ActivatorContent>
            <ChildContent>
                 <MudMenuItem>
                    <MudFab Icon="@Icons.Filled.Person" Style="color: #555E61; background-color: white; block-size: 20px; box-shadow: none;" Label="Profile" />
                 </MudMenuItem>
                 <MudMenuItem>
                    <MudFab Icon="@Icons.Filled.ExitToApp" Style="color: #555E61; background-color: white; block-size: 20px; box-shadow: none;" Label="Sign Out" />
                 </MudMenuItem>
            </ChildContent>
        </MudMenu>
    </MudAppBar>
    @if (drawerOpen)
    {
        <MudAppBar Style="display: block;" Bottom="true" Fixed="true" Color="Color.Secondary" Elevation="0">
            <MudGrid>
                <MudItem Class="d-flex justify-center" xs="3">
                    <MudIconButton OnClick="this.NavigateToHome" Icon="@Icons.Filled.SportsTennis" Color="Color.Inherit" />
                </MudItem>
                <MudItem Class="d-flex justify-center" xs="3">
                    <MudIconButton OnClick="this.NavigateToTeam" Icon="@Icons.Filled.PeopleOutline" Color="Color.Inherit" />
                </MudItem>
                <MudItem Class="d-flex justify-center" xs="3">
                    <MudIconButton OnClick="this.NavigateToFavourites" Icon="@Icons.Filled.StarOutline" Color="Color.Inherit" />
                </MudItem>
                <MudItem Class="d-flex justify-center" xs="3">
                    <MudIconButton OnClick="this.NavigateToStandings" Icon="@Icons.Filled.WineBar" Color="Color.Inherit" />
                </MudItem>
            </MudGrid>
        </MudAppBar>
    }
    else 
    {
        <MudAppBar Style="display: none;" Bottom="true" Fixed="true" Color="Color.Secondary" Elevation="0">
            <MudGrid>
                <MudItem Class="d-flex justify-center" xs="2">
                    <MudIconButton OnClick="this.DrawerToggle" Icon="@Icons.Filled.Menu" Color="Color.Inherit" />
                </MudItem>
                <MudItem Class="d-flex justify-center" xs="2">
                    <MudIconButton OnClick="this.NavigateToHome" Icon="@Icons.Filled.SportsTennis" Color="Color.Inherit" />
                </MudItem>
                <MudItem Class="d-flex justify-center" xs="2">
                    <MudIconButton Icon="@Icons.Filled.PeopleOutline" Color="Color.Inherit" />
                </MudItem>
                <MudItem Class="d-flex justify-center" xs="2">
                    <MudIconButton OnClick="this.NavigateToFavourites" Icon="@Icons.Filled.StarOutline" Color="Color.Inherit" />
                </MudItem>
                <MudItem Class="d-flex justify-center" xs="2">
                    <MudIconButton OnClick="this.NavigateToStandings" Icon="@Icons.Filled.WineBar" Color="Color.Inherit" />
                </MudItem>
            </MudGrid>
        </MudAppBar>
    }
    <MudMainContent Style="overflow-y: hidden; overflow-x: hidden;">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool drawerOpen = true;

    void DrawerToggle()
    {
        drawerOpen = !drawerOpen;
    }

    void NavigateToSearch()
    {
        this.navigationManager.NavigateTo("/search");
    }

    void NavigateToHome()
    {
        this.navigationManager.NavigateTo("/");
    }

    void NavigateToStandings() {
        this.navigationManager.NavigateTo("/standings");
    }

    void NavigateToFavourites()
    {
        this.navigationManager.NavigateTo("/favourites");
    } 

    void NavigateToTeam() 
    {
        this.navigationManager.NavigateTo("/team");
    }
}