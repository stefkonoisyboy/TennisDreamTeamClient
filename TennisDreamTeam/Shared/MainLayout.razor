@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Secondary" Elevation="0">
        <MudIconButton Icon="@Icons.Filled.SportsTennis" Color="Color.Inherit" Link="https://mudblazor.com/" Target="_blank" />
        <MudText Typo="Typo.h6">Tennis</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Filled.Search" Color="Color.Inherit" Link="https://mudblazor.com/" Target="_blank" />
        <MudIconButton Icon="@Icons.Filled.Settings" Color="Color.Inherit" Link="https://github.com/MudBlazor/MudBlazor/" Target="_blank" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}