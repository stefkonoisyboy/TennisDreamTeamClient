                        <MudItem Class="d-flex align-center" xs="12">
                            <MudText Style="font-size: 10px; color: #fff;">RANK: <strong>#3</strong></MudText>
                        </MudItem>
                    </MudGrid>
                </MudItem>
                <MudItem Class="d-flex align-center" xs="6">
                    <MudIconButton Icon="@Icons.Filled.GppBad" Style="color: #fff;" aria-label="delete"></MudIconButton>
