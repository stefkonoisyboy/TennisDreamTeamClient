@page "/search"

<PageTitle>Search</PageTitle>

<MudGrid Style="margin-block-start: -120px;">
    <MudItem xs="2">
        <MudIconButton OnClick="this.NavigateToHome" Icon="@Icons.Filled.ArrowBack"></MudIconButton>
    </MudItem>
    <MudItem Class="mt-n4" xs="10">
        <MudTextField @bind-Value="TextValue" Placeholder="Type your search here" Variant="Variant.Text"></MudTextField>
    </MudItem>
</MudGrid>

<MudDivider Class="mt-3" />

<MudButton Class="mt-4" Style="font-size: 12px;" Variant="Variant.Filled" Color="Color.Secondary">All</MudButton>
